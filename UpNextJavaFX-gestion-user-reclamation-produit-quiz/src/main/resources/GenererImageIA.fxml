<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="20" alignment="CENTER" prefWidth="700" prefHeight="600" fx:controller="controllers.GenererImageIA">
    <Label text="Générer une image IA" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
    <TextField fx:id="promptField" promptText="Décris l'image à générer..." prefWidth="500"/>
    <Button fx:id="generateImageButton"  onAction="#handleGenerateImage" text="Générer l'image" minWidth="200"/>
    <ImageView fx:id="generatedImageView" fitWidth="400" fitHeight="400" preserveRatio="true"/>
    <Button fx:id="useImageButton" text="Utiliser cette image pour mon produit" minWidth="250" disable="true"/>
</VBox> 