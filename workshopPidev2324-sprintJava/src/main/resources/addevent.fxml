                  </Stop>
               </stops>
            </LinearGradient>
         </fill>
      </Rectangle>
      <ImageView fitHeight="51.0" fitWidth="47.0" layoutX="16.0" layoutY="263.0" pickOnBounds="true" preserveRatio="true">
