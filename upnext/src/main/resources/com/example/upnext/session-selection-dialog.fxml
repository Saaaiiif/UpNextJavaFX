<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.upnext.SessionSelectionController"
      alignment="CENTER" spacing="20.0" styleClass="dialog-pane"
      prefWidth="550" prefHeight="250">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Select Session Type" styleClass="dialog-title">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>

    <Label text="Choose which type of session you want to start:" styleClass="dialog-text"/>

    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="userButton" text="User Session" onAction="#handleUserSession" 
                styleClass="session-button" prefWidth="150" prefHeight="60"/>
        <Button fx:id="artistButton" text="Artist Session" onAction="#handleArtistSession" 
                styleClass="session-button" prefWidth="150" prefHeight="60"/>
        <Button fx:id="adminButton" text="Admin Session" onAction="#handleAdminSession" 
                styleClass="session-button" prefWidth="150" prefHeight="60"/>
    </HBox>
</VBox>
